{
  "compilerOptions": {
    "target": "es6",

//    "module": "commonjs",
//    "outDir": "./dist",

    "module": "es6",
    "outDir": "./dist/esm",

    "rootDir": "./src",
    "moduleResolution": "node",
    "lib": ["es6", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules", "dist","example"
  ]
}